<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_background"
    android:orientation="vertical">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel_image_button"
        android:layout_margin="5dp"
        android:background="@null"
        android:id="@+id/cancel_image_button"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="300dp"
        android:id="@+id/image_view_big_size"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/song_name_tv"
        android:textColor="@color/blueSubTitle"
        android:shadowColor="@color/lightGrey"
        android:shadowDx="10"
        android:shadowDy="7"
        android:shadowRadius="8"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:gravity="center"
        android:id="@+id/song_writer_tv"
        android:layout_marginTop="5dp"
        android:textColor="@color/blueSubTitle"/>
</LinearLayout>