<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/noti_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel_notification_button"
        android:background="@null"
        android:id="@+id/cancel_notification"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_notification"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginEnd="50dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name song"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/name_song_noti"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="writer song"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:id="@+id/writer_song_noti"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layoutDirection="ltr">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_song_button"
            android:background="@null"
            android:id="@+id/back_song"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_song_button"
            android:background="@null"
            android:id="@+id/play_song"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pause_song_button"
            android:background="@null"
            android:id="@+id/pause_song"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_song_button"
            android:background="@null"
            android:id="@+id/next_song"/>
    </LinearLayout>

</LinearLayout>